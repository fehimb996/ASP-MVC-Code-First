@model IEnumerable<RVASIspit.Models.GrupaProizvoda>

@{
    ViewBag.Title = "Grupe Proizvoda";
}

<h2 class="text-center">Grupe proizvoda</h2>

@if (!Model.Any())
{
    <p class="text-center">Grupa proizvoda tabela je prazna.</p>
}

@if (User.IsInRole("Admin"))
{
    <div class="text-center">
        <p>
            @Html.ActionLink("Dodaj novu grupu", "Create", null, new { @class = "btn btn-primary" })
        </p>
    </div>
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.NazivGrupe)</h5>
                    <div class="text-center">
                        <div class="btn-group" role="group" aria-label="Akcije">
                            @if (User.IsInRole("Admin"))
                            {
                                @Html.ActionLink("Detalji", "Details", new { id = item.GrupaProizvodaID }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Izmeni", "Edit", new { id = item.GrupaProizvodaID }, new { @class = "btn btn-warning" })
                                @Html.ActionLink("Obriši", "Delete", new { id = item.GrupaProizvodaID }, new { @class = "btn btn-danger" })
                            }
                            else if (User.IsInRole("Korisnik"))
                            {
                                @Html.ActionLink("Detalji", "Details", new { id = item.GrupaProizvodaID }, new { @class = "btn btn-primary" })
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
