@model IEnumerable<RVASIspit.Models.GrupaProizvoda>

@{
    ViewBag.Title = "Grupe Proizvoda";
}

<h2 class="text-center">Grupe proizvoda</h2>

@if (!Model.Any())
{
    <p class="text-center">Grupa proizvoda tabela je prazna.</p>
}

@if (User.IsInRole("Admin"))
{
    <div class="text-center">
        <p>
            @Html.ActionLink("Dodaj novu grupu", "Create", null, new { @class = "btn btn-primary" })
        </p>
    </div>
}

<table class="table table-hover table-bordered table-responsive text-center align-middle">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NazivGrupe)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NazivGrupe)
            </td>
            <td>
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.GrupaProizvodaID }, new { @class = "btn btn-primary" })
                    <text> | </text>
                    @Html.ActionLink("Details", "Details", new { id = item.GrupaProizvodaID }, new { @class = "btn btn-primary" })
                    <text> | </text>
                    @Html.ActionLink("Delete", "Delete", new { id = item.GrupaProizvodaID }, new { @class = "btn btn-primary" })
                }
                else if (User.IsInRole("Korisnik"))
                {
                    @Html.ActionLink("Details", "Details", new { id = item.GrupaProizvodaID }, new { @class = "btn btn-primary" })
                }
            </td>
        </tr>
    }

</table>
