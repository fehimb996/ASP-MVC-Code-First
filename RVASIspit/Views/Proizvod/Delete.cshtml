@model RVASIspit.Models.Proizvod

@{
    ViewBag.Title = "Obriši Proizvod";
}

<h2>Obriši</h2>

<h3>Da li želite da obrišete proizvod?</h3>
<div>
    <h4>Proizvod</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Naziv)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Naziv)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cena)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cena)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GrupaProizvoda.NazivGrupe)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.GrupaProizvoda.NazivGrupe)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VrstaProizvoda.NazivVrste)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.VrstaProizvoda.NazivVrste)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Obriši" class="btn btn-danger" />
            @Html.ActionLink("Idi nazad", "Index", null, new { @class = "btn btn-primary" })
        </div>
    }
</div>
