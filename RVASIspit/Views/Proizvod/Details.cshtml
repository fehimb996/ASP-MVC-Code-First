@model RVASIspit.Models.Proizvod

@{
    ViewBag.Title = "Proizvod Detalji";
}

<h2>Detalji</h2>

<div>
    <h4>Proizvod</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Naziv)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Naziv)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cena)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cena)
        </dd>

        <dt>
            Grupa Proizvoda
        </dt>
        <dd>
            @Html.DisplayFor(model => model.GrupaProizvoda.NazivGrupe)
        </dd>

        <dt>
            Vrsta Proizvoda
        </dt>
        <dd>
            @Html.DisplayFor(model => model.VrstaProizvoda.NazivVrste)
        </dd>
    </dl>
</div>

<div>
    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Izmeni", "Edit", new { id = Model.ProizvodID }, new { @class = "btn btn-warning" })
    }

    @Html.ActionLink("Idi nazad", "Index", null, new { @class = "btn btn-primary" })
</div>
