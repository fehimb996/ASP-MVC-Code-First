@model IEnumerable<RVASIspit.Models.Klijent>

@{
    ViewBag.Title = "Klijenti";
}

<h2>Klijenti</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover table-bordered table-responsive text-center">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefon)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.KlijentID }) |
                @Html.ActionLink("Details", "Details", new { id = item.KlijentID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.KlijentID })
            </td>
        </tr>
    }

</table>
