@model RVASIspit.Models.ProizvodSastojak

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>ProizvodSastojak</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Naziv Proizvoda
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Proizvod.Naziv)
        </dd>
        <dt>
            Naziv Sastojka
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Sastojak.NazivSastojka)
        </dd>
    </dl>
</div>

<p>
    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Izmeni", "Edit", new { proizvodId = Model.ProizvodID, sastojakId = Model.SastojakID }, new { @class = "btn btn-warning" })
    }
    @Html.ActionLink("Idi nazad", "Index", null, new { @class = "btn btn-primary" })
</p>
