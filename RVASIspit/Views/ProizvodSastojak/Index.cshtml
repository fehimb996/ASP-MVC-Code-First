@model IEnumerable<RVASIspit.Models.ProizvodSastojak>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Sastojci proizvoda</h2>

@if (User.IsInRole("Admin"))
{
    <div class="text-center">
        <p>
            @Html.ActionLink("Dodaj novi", "Create", null, new { @class = "btn btn-primary" })
        </p>
    </div>
}

<table class="table table-hover table-bordered table-responsive text-center align-middle">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Proizvod.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sastojak.NazivSastojka)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Proizvod.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sastojak.NazivSastojka)
            </td>
            <td>
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edit", "Edit", new { proizvodId = item.ProizvodID, sastojakId = item.SastojakID }, new { @class = "btn btn-primary" })
                    <text> | </text>
                    @Html.ActionLink("Details", "Details", new { proizvodId = item.ProizvodID, sastojakId = item.SastojakID }, new { @class = "btn btn-primary" })
                    <text> | </text>
                    @Html.ActionLink("Delete", "Delete", new { proizvodId = item.ProizvodID, sastojakId = item.SastojakID }, new { @class = "btn btn-primary" })
                }
                else if (User.IsInRole("Korisnik"))
                {
                    @Html.ActionLink("Details", "Details", new { proizvodId = item.ProizvodID, sastojakId = item.SastojakID }, new { @class = "btn btn-primary" })
                }
            </td>
        </tr>
    }

</table>
