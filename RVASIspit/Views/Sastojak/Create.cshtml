@model RVASIspit.Models.Sastojak

@{
    ViewBag.Title = "Dodaj Sastojak";
}

<h2>Dodaj sastojak</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Sastojak</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.NazivSastojka, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NazivSastojka, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NazivSastojka, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group p-2">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kreiraj" class="btn btn-outline-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Idi nazad", "Index", null, new { @class = "btn btn-primary" })
</div>
