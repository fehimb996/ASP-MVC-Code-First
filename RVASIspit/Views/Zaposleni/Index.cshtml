@model IEnumerable<RVASIspit.Models.Zaposleni>

@{
    ViewBag.Title = "Zaposleni Index";
}

<h2>Svi Zaposleni</h2>

@if (User.IsInRole("Admin") || User.IsInRole("Korisnik"))
{
    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </p>
}

<table class="table table-hover table-bordered table-responsive text-center">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prezime)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.ZaposleniID })
                @if (User.IsInRole("Admin") || User.IsInRole("Korisnik"))
                {
                    <text> | </text>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ZaposleniID })
                    <text> | </text>
                    @Html.ActionLink("Delete", "Delete", new { id = item.ZaposleniID })
                }
            </td>
        </tr>
    }
</table>
